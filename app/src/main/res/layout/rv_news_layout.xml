<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_thumbnail_rvNewsLayout"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">
            <TextView
                android:id="@+id/tv_title_rvNewsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title News"
                android:maxLines="2"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_tanggal_rvNewsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realeas Date"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_isiKonten_rvNewsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuplikan Konten News"
                android:textSize="16sp"
                android:maxLines="3"/>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>